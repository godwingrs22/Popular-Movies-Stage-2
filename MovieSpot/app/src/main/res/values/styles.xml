<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent_1</item>
        <item name="photoItemForeground">?android:selectableItemBackground</item>
        <item name="android:windowBackground">@color/gray_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Widget.HeaderBar.Spinner.Base" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:overlapAnchor" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTheme.Widget.HeaderBar.Spinner" parent="AppTheme.Widget.HeaderBar.Spinner.Base" />

    <style name="Toolbar">
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="AppTheme.ThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/body_text_white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="ActionBar.Subtitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/body_text_white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="MovieDetailPlayImage">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MovieDetailAnchor">
        <item name="android:layout_alignTop">@id/movie_cover_container</item>
        <item name="android:layout_alignBottom">@id/movie_cover_container</item>
    </style>

</resources>
